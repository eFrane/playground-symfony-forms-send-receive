{% extends 'base.html.twig' %}

{% block body %}
    {% if form is defined %}
        <h1>A Form</h1>

        <div>
            {{ form(form) }}
        </div>
    {% else %}
        <h1>A received Form</h1>

        {{ dump(task) }}

        <a href="{{ path('form.new') }}">New Task Example</a>
        <a href="{{ path('form.edit') }}">Edit Task Example</a>
    {% endif %}
{% endblock body %}
